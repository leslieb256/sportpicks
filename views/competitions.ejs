<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Sport Picks - Competitions</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-check-square-o"></span> Competitions</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">
		<ol class="breadcrumb">
			<li class="active">Competitions</li>
		</ol>


		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="list-group">
				<% competitions.forEach(function(competition){ %>
					<a href="/rounds?competition=<%= competition.id %>" class="list-group-item"> <%if (competition.league.logo != undefined){ %><img src="/images/league/logo/sm/<%=competition.league.logo %>" height="30" width="30"><% } %> <%= competition.name %></a>
				<% }); %>
			</div>
		<div class="col-sm-6">
		</div>
		</div>
	</div>

</div>
</body>
</html>